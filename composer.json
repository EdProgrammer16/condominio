{
    "name": "your-namespace/your-project",
    "description": "A simple MVC framework with PHP.",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "firebase/php-jwt": "^6.0",
        "league/oauth2-server": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "core/",
            "App\\": "app/",
            "Config\\": "config/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('vendor/autoload.php') || copy('vendor/autoload.php', 'vendor/autoload.php');\""
        ]
    },
    "minimum-stability": "stable"
}
